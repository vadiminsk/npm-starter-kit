{
  "name": "npm-starter",
  "version": "1.0.0",
  "description": "basic structure to start project",
  "main": "index.js",
  "author": "Vadim",
  "license": "ISC",
  "scripts": {
    "scss:lint": "sass-lint 'src/**/*.scss' -v -s",
    "scss:compile": "node-sass --include-path ./node_modules --importer node_modules/compass-importer/index.js --sourceMap true src/scss/style.scss dist/css/style.css --output-style compressed",
    "scss:clean": "cleancss --format 'breaks:afterComment=on' -o dist/css/style.css dist/css/style.css",
    "scss:autoprefixer": "postcss -u autoprefixer --autoprefixer.browsers \"last 2 versions\" -r dist/css/style.css",
    "scss:prettier": "prettier-stylelint --write 'src/**/*.{css,scss}'",
    "watch:scss": "chokidar \"./src/scss\" -c \"npm run build:scss\"",
    "build:scss": "npm run scss:lint && npm run scss:compile && npm run scss:autoprefixer",
    "js:eslint": "eslint --fix src/js/*.js",
    "watch:js": "chokidar \"./src/js\" -c \"npm run build:js\"",
    "build:js": "npm run js:eslint && webpack --mode=production",
    "serve": "browser-sync start --proxy \"http://ga-launchpad.lndo.site/\" --no-notify --files \"dist/css/*.css, dist/js/*.js\"",
    "develop": "npm-run-all --parallel watch:**",
    "compress:images": "node imagemin.js",
    "copy:files": "copyfiles -u 1 ./src/assets/**/* ./src/assets/**/**/* dist",
    "copy:fonts": "copyfiles -u 1 ./src/assets/fonts/**/* dist",
    "copy:allfonts": "copyfiles -u 1 ./src/assets/fonts/**/**/* dist",
    "build": "npm run scss:prettier && npm-run-all --parallel build:** && npm run compress:images && npm run copy:files && npm run copy:fonts && npm run copy:allfonts",
    "build:quiet:js": "npm run js:eslint && webpack --mode=production",
    "build:quiet:scss": "npm run scss:lint && npm run scss:compile && npm run scss:autoprefixer && npm run scss:clean",
    "build:production": "npm-run-all --parallel build:quiet:** && npm run compress:images && npm run copy:files"
  },
  "devDependencies": {
    "@babel/core": "^7.8.3",
    "@babel/preset-env": "^7.8.3",
    "@babel/register": "^7.8.3",
    "autoprefixer": "^10.2.4",
    "babel-loader": "^8.0.6",
    "browser-sync": "^2.26.14",
    "chokidar-cli": "^2.1.0",
    "clean-css-cli": "^4.3.0",
    "compass-importer": "^0.4.1",
    "copyfiles": "^2.2.0",
    "eslint": "^7.21.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^8.1.0",
    "eslint-loader": "^4.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.3.1",
    "imagemin-cli": "^6.0.0",
    "imagemin-giflossy": "^5.1.10",
    "imagemin-mozjpeg": "^8.0.0",
    "imagemin-pngquant": "^7.0.0",
    "imagemin-svgo": "^7.0.0",
    "install": "^0.12.2",
    "node-notifier-cli": "^1.1.2",
    "node-sass": "^5.0.0",
    "node-sass-asset-functions": "^0.1.0",
    "npm": "^7.6.0",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "postcss": "^8.2.6",
    "postcss-cli": "^8.3.1",
    "prettier": "^1.19.1",
    "prettier-eslint": "^9.0.1",
    "prettier-stylelint": "^0.4.2",
    "sass-lint": "^1.12.1",
    "stylelint": "^13.11.0",
    "stylelint-config-recommended": "^3.0.0",
    "stylelint-scss": "^3.19.0",
    "svg-sprite-generator": "0.0.7",
    "svgo": "^2.2.0",
    "uglify-js": "^3.13.0",
    "webpack": "^4.41.5",
    "webpack-cli": "^3.3.10",
    "webpack-dev-server": "^3.11.0"
  },
  "dependencies": {}
}
